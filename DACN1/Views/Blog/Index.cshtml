@model IEnumerable<DACN1.Models.TbBlog>

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Organic Information</p>
					<h1>Blogs</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- latest news -->
<div class="latest-news mt-150 mb-150">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				string sUrl = $"/blog/{item.Alias}-{item.BlogId}.html";
				<div class="col-lg-4 col-md-6">
					<div class="single-latest-news">
						<a href="@sUrl"><img src="@item.Image" alt="Latest News" width="350" height="200"></a>
					<div class="news-text-box">
						<h3><a href="@sUrl">@item.Title</a></h3>
						<p class="blog-meta">
							<span class="author"><i class="fas fa-user"></i> @item.CreatedBy</span>
							<span class="date"><i class="fas fa-calendar"></i> @item.CreatedDate.Value.ToString("dd/MM/yyyy")</span>
						</p>
						<p class="excerpt">@item.Description</p>
						<a href="@sUrl" class="read-more-btn">Read more <i class="fas fa-angle-right"></i></a>
					</div>
				</div>
			</div>
			}
		</div>

		<div class="row">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-center">
						<div class="pagination-wrap">
							<ul>
								<li><a href="#">Prev</a></li>
								<li><a class ="active" href="#">1</a></li>
								<li><a href="#">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">Next</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
