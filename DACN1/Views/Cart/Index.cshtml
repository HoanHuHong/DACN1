@model IEnumerable<DACN1.ViewModel.CartItem>
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>
						Tươi và hữu cơ
					</p>
					<h1>Giỏ hàng</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- cart -->
<div class="cart-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-12">
				<div class="cart-table-wrap">
					<table class="cart-table">
						<thead class="cart-table-head">
							<tr class="table-head-row">
								<th class="product-remove"></th>
								<th class="product-image">Ảnh sản phẩm</th>
								<th class="product-name">Tên</th>
								<th class="product-price">Giá</th>
								<th class="product-quantity">Số lượng</th>
								<th class="product-total">Tổng</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var item in Model)
							{
								<tr class="table-body-row">
									<td class="product-remove"><a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.ProductId"><i class="far fa-window-close"></i></a></td>
									<td class="product-image"><img src="@item.Image" alt=""></td>
									<td class="product-name">@item.Title</td>
									<td class="product-price">@item.Price VND</td>
									<td class="product-quantity">@item.Quantity</td>
									<td class="product-total">@item.PriceTotal</td>
								</tr>

							}
						</tbody>
					</table>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="total-section">
					<table class="total-table">
						<thead class="total-table-head">
							<tr class="table-total-row">
								<th>Tổng</th>
								<th>Giá</th>
							</tr>
						</thead>
						<tbody>
							<tr class="total-data">
								<td><strong>Tổng cộng: </strong></td>
							
                                    <td>@Model.Sum(p=>p.PriceTotal) VND</td>
                                
								
							</tr>
							
						</tbody>
					</table>
					<div class="cart-buttons">
						<a asp-action="Checkout" asp-controller="Cart" class="boxed-btn black">Thanh toán</a>
					</div>
				</div>

				
			</div>
		</div>
	</div>
</div>