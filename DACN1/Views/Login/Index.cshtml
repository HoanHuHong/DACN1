@model DACN1.Models.TbAccount
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap">
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f5f5f5;
        }

        .login-box {
            width: 400px;
            margin: 80px auto;
        }

        .login-card-body {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .login-card-body h3 {
                font-weight: 500;
                text-align: center;
                margin-bottom: 8px;
            }

            .login-card-body p.desc {
                font-size: 14px;
                color: #666;
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group label {
            font-size: 13px;
            font-weight: 500;
            color: #555;
        }

        .form-control {
            border-radius: 8px;
            font-size: 14px;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
            border-radius: 30px;
            padding: 10px;
            font-weight: 500;
            transition: background 0.3s ease;
        }

            .btn-black:hover {
                background-color: #222;
            }

        .text-danger {
            font-size: 13px;
        }

        .footer-links {
            font-size: 13px;
            text-align: center;
            margin-top: 15px;
        }

            .footer-links a {
                color: #007bff;
                text-decoration: none;
            }

                .footer-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-box">
        <div class="login-card-body">
            <h3>ĐĂNG NHẬP TÀI KHOẢN</h3>
            <p class="desc">Nhập email và mật khẩu của bạn:</p>

            @if (!string.IsNullOrEmpty(DACN1.Utilities.Function._Message))
            {
                <div class="text-danger text-center mb-3">@DACN1.Utilities.Function._Message</div>
            }

            <form asp-action="Index" asp-controller="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-black btn-block">ĐĂNG NHẬP</button>
            </form>

            <div class="footer-links">
                <p>Khách hàng mới? <a asp-controller="Register" asp-action="Index">Tạo tài khoản</a></p>
            </div>
        </div>
    </div>

    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
